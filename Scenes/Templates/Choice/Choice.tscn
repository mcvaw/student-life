[sub_resource type="GDScript" id=1]
script/source = "extends Control


var sc = load(\"res://Scenes/templates/Choice/Option.tscn\")

export (Array, String) var options
export (Array, String, FILE, \"*.tscn\") var scenes

onready var box = $VBoxContainer

const height = 170


func _ready() -> void:
	if len(options) != len(scenes):
		print(\"Invalid length of array\")
	else:
		box.rect_position = Vector2(560, 1080-height*len(options))
		var k = 0
		for i in options:
			var tmp = sc.instance()
			tmp.label = i
			tmp.connect(\"pressed\", get_node(\"/root/SCENES\"), \"load_scene\", [scenes[k]])
			box.add_child(tmp)
			k += 1
"

