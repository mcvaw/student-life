[sub_resource type="GDScript" id=2]
script/source = "extends Node2D

# Восстанавливает состояние сцены
# Считывает переменные из /root/saved

# Игрок
export (NodePath) var player
# Триггер диалога Мистера Дудца
export (NodePath) var singer
onready var svd = get_node(\"/root/saved\")


# Временно сохранить текущее состояние
# !Не сохраняет в файл
func _save() -> void:
	svd.player_pos = get_node(player).position
	svd.singer_dialog = get_node(singer).dialog_number
	svd.singer_dialog_used = get_node(singer).used


# Восстановить состояние
func _restore() -> void:
	get_node(player).position = svd.player_pos
	get_node(singer).dialog_number = svd.singer_dialog
	get_node(singer).used = svd.singer_dialog_used

func _ready() -> void:
	_restore()
"

