script/source = "extends Node2D


export (String, FILE, \"*.ogg\") var song
export (String, FILE, \"*.tscn\") var math_scene
export (String, FILE, \"*.tscn\") var store_scene
export (String, FILE, \"*.tscn\") var tickets_ui

# Перейти в магазин
func to_store():
	get_node(\"restore_state\")._save()
	get_node(\"/root/scene_loader\").load_scene(store_scene)

# Касса
func ticket_window():
	get_node(\"Body\").lock()
	var ui = load(tickets_ui).instance()
	ui.name = \"tickets\"
	get_node(\"/root/ui/CanvasLayer\").add_child(ui)

func math():
	get_node(\"restore_state\")._save()
	get_node(\"/root/scene_loader\").load_scene(math_scene)

func _ready():
	# Обновить этап
	get_node(\"/root/prop\").save_param(
		get_node(\"/root/global\").loaded, \"stage\", \"2\"
	)
	# Начать играть песню, если играет другая
	get_node(\"/root/ost\").play_sound(song)
"

[sub_resource type="GDScript" id=2]
script/source = "extends Node2D

# Восстанавливает состояние сцены
# Считывает переменные из /root/saved

# Игрок
export (NodePath) var player
# Триггер диалога Мистера Дудца
export (NodePath) var singer
onready var svd = get_node(\"/root/saved_street_data\")


# Временно сохранить текущее состояние
# !Не сохраняет в файл
func _save() -> void:
	svd.player_pos = get_node(player).position
	svd.singer_dialog = get_node(singer).dialog_number
	svd.singer_dialog_used = get_node(singer).used


# Восстановить состояние
func _restore() -> void:
	get_node(player).position = svd.player_pos
	get_node(singer).dialog_number = svd.singer_dialog
	get_node(singer).used = svd.singer_dialog_used

func _ready() -> void:
	_restore()
"

