script/source = "extends Node2D

export (String, FILE, \"*.ogg\") var song
export (String, FILE, \"*.tscn\") var speaker_scene
export (String, FILE, \"*.tscn\") var store_scene
export (String, FILE, \"*.tscn\") var tickets_ui


# Перейти в магазин
func to_store():
	get_node(\"restore_state\")._save()
	get_node(\"/root/scene_loader\").load_scene(store_scene)


# Касса
func ticket_window():
	get_node(\"Body\").lock()
	var ui = load(tickets_ui).instance()
	ui.name = \"tickets\"
	get_node(\"/root/ui/CanvasLayer\").add_child(ui)


# Вход в мехмат
func math():
	if get_node(\"/root/prop\").get_param(\"facility\") == \"0\":
		get_node(\"restore_state\")._save()
		get_node(\"/root/scene_loader\").load_scene(speaker_scene)
	else:
		get_node(\"/root/show_nf\").show_notification(\"Вы не можете зайти сюда\")


# Вход в естественно-научный факультет
func ns():
	if get_node(\"/root/prop\").get_param(\"facility\") == \"1\":
		get_node(\"restore_state\")._save()
		get_node(\"/root/scene_loader\").load_scene(speaker_scene)
	else:
		get_node(\"/root/show_nf\").show_notification(\"Вы не можете зайти сюда\")


# Вход в гуманитарный факультет
func hum():
	if get_node(\"/root/prop\").get_param(\"facility\") == \"2\":
		get_node(\"restore_state\")._save()
		get_node(\"/root/scene_loader\").load_scene(speaker_scene)
	else:
		get_node(\"/root/show_nf\").show_notification(\"Вы не можете зайти сюда\")


# Войти в дом садовника
func enter_house():
	get_node(\"/root/show_nf\").show_notification(\"Заперто\")


func _ready():
	# Обновить этап
	get_node(\"/root/prop\").save_param(\"stage\", \"2\")
	# Начать играть песню, если играет другая
	get_node(\"/root/ost\").play_sound(song)
"

