script/source = "extends Node2D

# Выключить свет

export (NodePath) var cm
export (NodePath) var tw
export (String, FILE, \"*.tscn\") var hidden_room 


func adventure_begins():
	get_node(\"restore_state\").save()
	get_node(\"/root/scene_loader\").load_scene(hidden_room)

func next_facility():
	get_node(\"/root/show_nf\").show_notification(\"У вас нет доступа\")

func turn_lights_off():
	yield(get_tree().create_timer(2), \"timeout\")
	get_node(tw).interpolate_property(
		get_node(cm), \"color\",
		Color(\"#00080808\"), Color(\"#ee080808\"), 1,
		Tween.TRANS_BOUNCE, Tween.EASE_IN_OUT)
	get_node(tw).start()


func turn_lights_off_now():
	get_node(cm).color = Color(\"#ee080808\")
"

