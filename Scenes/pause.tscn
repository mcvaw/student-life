script/source = "extends Control


func _ready() -> void:
	get_node(\"MarginContainer\").visible = false
	get_node(\"ColorRect\").visible = false


# Кнопка паузы
func _on_Pause_pressed() -> void:
	get_node(\"/root/fx\").btn_click()
	get_node(\"MarginContainer\").visible = true
	get_node(\"ColorRect\").visible = true
	get_node(\"Pause\").visible = false


# Кнопка возврата в игру
func _on_Button_pressed() -> void:
	get_node(\"/root/fx\").btn_click()
	get_node(\"MarginContainer\").visible = false
	get_node(\"ColorRect\").visible = false
	get_node(\"Pause\").visible = true


# Кнопка выхода
func _on_Button2_pressed() -> void:
	get_node(\"/root/fx\").btn_click()
	assert(get_tree().change_scene(\"res://Scenes/menu/menu.tscn\") == OK)
"

