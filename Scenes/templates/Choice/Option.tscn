[gd_scene load_steps=2 format=2]

[sub_resource type="GDScript" id=1]
script/source = "extends Button

export (String) var label setget set_text
export (bool) var active = true setget set_state


func set_text(val : String) -> void:
	label = val
	$ColorRect/Label.text = label


func set_state(val : bool) -> void:
	active = val
	if active:
		$ColorRect.color = Color(\"#ffffff\")
	else:
		$ColorRect.color = Color(\"#dadada\")


func _on_Button_pressed():
	NOTIFY.show(\"hi\")
"

