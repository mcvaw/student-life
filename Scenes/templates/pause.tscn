script/source = "extends Control


var enabled : bool = false
export (String, FILE, \"*.tscn\") var menu_scene


func _ready() -> void:
	get_node(\"MarginContainer\").visible = false
	get_node(\"ColorRect\").visible = false


func switch():
	if enabled:
		_return_to_game()
	else:
		_on_Pause_pressed()


# Кнопка паузы
func _on_Pause_pressed() -> void:
	enabled = true
	get_node(\"/root/fx\").btn_click()
	get_node(\"MarginContainer\").visible = true
	get_node(\"ColorRect\").visible = true
	get_node(\"Pause\").visible = false
	if (has_node(\"/root/Node2D/Body\")):
		get_node(\"/root/Node2D/Body\").lock()


# Кнопка возврата в игру
func _return_to_game() -> void:
	enabled = false
	get_node(\"/root/fx\").btn_click()
	get_node(\"MarginContainer\").visible = false
	get_node(\"ColorRect\").visible = false
	get_node(\"Pause\").visible = true
	if (has_node(\"/root/Node2D/Body\")):
		get_node(\"/root/Node2D/Body\").unlock()


# Кнопка возврата в меню
func _to_menu() -> void:
	get_node(\"/root/fx\").btn_click()
	# Затемнить экран
	var sl = get_node(\"/root/scene_loader\")
	sl.fade_in()
	yield(get_tree().create_timer(sl.time), \"timeout\")
	# Убрать паузу
	_return_to_game()
	get_node(\"/root/scene_loader\").load_scene(menu_scene, false)


# Выход из игры
func _quit_game():
	# Затухание
	var sl = get_node(\"/root/scene_loader\")
	sl.fade_in()
	yield(get_tree().create_timer(sl.time), \"timeout\")
	# Сохранить данные
	get_node(\"/root/global\").write_file()
	# Закрыть игру
	get_tree().quit()
"

