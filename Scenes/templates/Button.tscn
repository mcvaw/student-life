[gd_scene load_steps=2 format=2]

[sub_resource type="GDScript" id=1]
script/source = "extends Button


# Скрипт управления кнопкой
# Позволяет удобно задавать текст

export (String) var btn_text
export (bool) var use_animation = true
onready var effect = $Tween
onready var mrg = $MarginContainer
onready var label = $Label

export (Color) var light_color
export (Color) var dark_color

var gaps : int = 7


func _ready():
	label.text = btn_text
	if use_animation:
		mrg.add_constant_override(\"margin_right\", rect_size.x - gaps)
	else:
		mrg.visible = false


func _on_Mouse_Enter():
	if use_animation:
		effect.interpolate_property(mrg, 
		\"custom_constants/margin_right\",
		rect_size.x - gaps, gaps, 0.25, 
		Tween.TRANS_QUAD, Tween.EASE_IN_OUT
		)
		effect.start()
		label.add_color_override(\"font_color\", dark_color)

func _on_Mouse_Exit():
	if use_animation:
		effect.interpolate_property(mrg, 
		\"custom_constants/margin_right\",
		gaps, rect_size.x - gaps, 0.25, 
		Tween.TRANS_QUAD, Tween.EASE_IN_OUT
		)
		effect.start()
		label.add_color_override(\"font_color\", light_color)
"

