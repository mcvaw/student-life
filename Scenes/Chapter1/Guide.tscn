script/source = "extends Node2D


export (Array, String, FILE, \"*.json\") var dialogs


func get_dialog_number() -> String:
	if GLOBAL.loaded != \"-1\":
		var fac = TEMP.get(\"facility\")
		if fac == \"0\":
			return dialogs[0]
		if fac == \"1\":
			return dialogs[1]
		if fac == \"2\":
			return dialogs[2]
	NOTIFY.show(\"NOTLOADED\")
	return \"-1\"


func activate() -> void:
	DIALOG.show_dialog(get_dialog_number())
"

