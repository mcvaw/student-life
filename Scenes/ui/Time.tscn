#################
# Скрипт времени
#################

export (NodePath) var label
var countdown_cond : bool


# Установить время (в формате hh:mm)
func set_time(text):
	get_node(label).text = text


# Отсчет
func countdown():
	while countdown_cond:
		yield(get_tree().create_timer(10), \"timeout\")
		var tx = get_node(label).text.split(\":\")
		if tx[1] == \"59\":
			tx[1] = \"00\"
			var tmp = int(tx[0]) + 1
			tx[0] = str(tmp)
			if tmp < 10:
				tx[0] = \"0\" + tx[0]
		else:
			var tmp = int(tx[1]) + 1
			tx[1] = str(tmp)
			if tmp < 10:
				tx[1] = \"0\" + tx[1]
			
		get_node(label).text = tx[0] + \":\" + tx[1]


# Начать отсчет
func start():
	countdown_cond = true
	countdown()


func stop():
	countdown_cond = false
"

