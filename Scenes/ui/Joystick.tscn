script/source = "extends Button

func emit_once(name):
	var ev = InputEventAction.new()
	ev.action = name
	ev.pressed = true
	Input.parse_input_event(ev)
	ev.pressed = false
	yield(get_tree().create_timer(0.3), \"timeout\")
	Input.parse_input_event(ev)

func _on_Accept_pressed():
	emit_once(\"dialog_start\")
"

