script/source = "extends Control


onready var label : = $ColorRect/VBoxContainer/MarginContainer/Label
onready var button_start : = $ColorRect/VBoxContainer/ColorRect
onready var button_back : = $ColorRect/VBoxContainer/ColorRect2

onready var glob : = $\"/root/global\"
var num : int

export (String, FILE, \"*.tscn\") var next_scene
export (String, FILE, \"*.tscn\") var prev_scene


func _ready() -> void:
	# Создать новый файл save.n.txt
	if glob.saved_games.size() != 0:
		num = glob.saved_games.back() + 1
	else:
		num = 1
	var file_path : = \"user://save.\" + str(num) + \".txt\"
	var fl : = File.new()
	fl.open(file_path, File.WRITE)
	# Сохранить номер этапа
	var dat : = {\"stage\":0}
	fl.store_line(to_json(dat))
	fl.close()
	# Добавить номер в массив
	glob.saved_games.push_back(num)
	# Сохранить изменения
	glob.write_file()
	# Дать игроку знать, что он может играть
	label.bbcode_text += (str(num) 
	+ \"                    [[color=green]OK[/color]]\")
	label.bbcode_text += \"\\n* Этап #1: Воспоминания и иллюзии   [[color=yellow]Waiting[/color]]\"
	button_start.disabled = false
	button_back.disabled = false


func _start_game():
	get_node(\"/root/fx\").btn_click()
	get_node(\"/root/global\").loaded = num
	get_node(\"/root/scene_loader\").load_scene(next_scene)


func _return_to_menu():
	get_node(\"/root/fx\").btn_click()
	get_node(\"/root/scene_loader\").load_scene(prev_scene)
"

