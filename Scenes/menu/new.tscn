script/source = "extends Control


onready var label : = $ColorRect/VBoxContainer/Label
onready var button_start : = $ColorRect/VBoxContainer/Button
onready var button_back : = $ColorRect/VBoxContainer/Button2

onready var glob : = $\"/root/global\"
var num : int

export var next_scene : = \"res://Scenes/1.beggining/date1.tscn\"
export var prev_scene : = \"res://Scenes/menu/menu.tscn\"

func _ready() -> void:
	# Создать новый файл save.n.txt
	if glob.saved_games.size() != 0:
		num = glob.saved_games.back() + 1
	else:
		num = 1
	var file_path : = \"user://save.\" + str(num) + \".txt\"
	var fl : = File.new()
	fl.open(file_path, File.WRITE)
	# Сохранить номер этапа
	var dat : = {\"stage\":0}
	fl.store_line(to_json(dat))
	fl.close()
	# Добавить номер в массив
	glob.saved_games.push_back(num)
	# Сохранить изменения
	glob.write_file()
	# Дать игроку знать, что он может играть
	label.text += \" Готово!\"
	button_start.disabled = false
	button_back.disabled = false


func _on_Button_pressed():
	get_node(\"/root/fx\").btn_click()
	get_node(\"/root/global\").loaded = num
	assert(get_tree().change_scene(next_scene) == OK)


func _on_ButtonBack_pressed():
	get_node(\"/root/fx\").btn_click()
	assert(get_tree().change_scene(prev_scene) == OK)

"

