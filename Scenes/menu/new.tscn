[sub_resource type="GDScript" id=1]
script/source = "extends Control


export (NodePath) var label
export (NodePath) var button
export (NodePath) var buttonback

var num

func _ready():
	# Создать новый файл save.n.txt
	var glob = get_node(\"/root/global\")
	if glob.saved_games.size() != 0:
		num = glob.saved_games.back() + 1
	else:
		num = 1
	var file_path = \"user://save.\" + str(num) + \".txt\"
	var fl = File.new()
	fl.open(file_path, File.WRITE)
	# Сохранить номер этапа
	var dat = {\"stage\":0}
	fl.store_line(to_json(dat))
	fl.close()
	# Добавить номер в массив
	glob.saved_games.push_back(num)
	# Сохранить изменения
	glob.call(\"write_file\")
	# Дать игроку знать, что он может играть
	get_node(label).text += \" Готово!\"
	get_node(button).disabled = false
	get_node(buttonback).disabled = false


func _on_Button_pressed():
	get_node(\"/root/fx\").call(\"click1\")
	get_node(\"/root/global\").loaded = num
	assert(get_tree().change_scene(\"res://Scenes/1.beggining/fireworks.tscn\") == OK)


func _on_ButtonBack_pressed():
	get_node(\"/root/fx\").call(\"click1\")
	assert(get_tree().change_scene(\"res://Scenes/menu/menu.tscn\") == OK)

"

