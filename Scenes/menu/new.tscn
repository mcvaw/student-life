script/source = "extends Control


export(NodePath) var btn_start
export(NodePath) var btn_back
export(NodePath) var label

onready var glob : = $\"/root/global\"

export (String, FILE, \"*.tscn\") var next_scene


func random_dir_exists(path : String) -> bool:
	var dir = Directory.new()
	return dir.dir_exists(\"user://\" + path)


func get_random_name() -> String:
	var res : String = \"\"
	var alp = \"123456789abcdefghkmnpqrst\"
	var indmax : = len(alp)
	randomize()
	for _i in range(8):
		res += alp[randi() % indmax]
	return res


func save_file() -> String:
	# Получить уникальный game_id
	var game_id : String = get_random_name()
	while random_dir_exists(game_id):
		game_id = get_random_name()
	glob.loaded = game_id
	# Сохранить статус #0
	get_node(\"/root/prop\").save_param(game_id, \"stage\", \"0\")
	return game_id


func append_text(game_id : String) -> void:
	# Дать игроку знать, что он может играть
	# Добавить [ok]
	get_node(label).bbcode_text += (game_id + \"             [[color=green]OK[/color]]\")
	# Добавить текст об этапе
	get_node(label).bbcode_text += \"\\n* Этап #1: Воспоминания и иллюзии   [[color=yellow]Waiting[/color]]\"


func _ready() -> void:
	# Отключить музыку
	get_node(\"/root/ost\").stop()
	# Создать и сохранить файл
	var game_id : = save_file()
	append_text(game_id)
	# Активировать кнопки
	get_node(btn_start).disabled = false


func _start_game():
	get_node(\"/root/fx\").btn_click()
	get_node(\"/root/scene_loader\").load_scene(next_scene)
"

